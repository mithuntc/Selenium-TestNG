package rahulshettyacademy.tests;
import io.github.bonigarcia.wdm.WebDriverManager;
import java.time.Duration;
import java.util.List;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import rahulshettyacademy.pageobjects.CartPage;
import rahulshettyacademy.pageobjects.CheckoutPage;
import rahulshettyacademy.pageobjects.LandingPage;
import rahulshettyacademy.pageobjects.ProductCatalogue;

public class SubmitOrderTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// TODO Auto-generated method stub
				String productName = "ZARA COAT 3";
				WebDriverManager.chromedriver().setup();
				WebDriver driver = new ChromeDriver();
				driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
				driver.get("https://rahulshettyacademy.com/client");
				LandingPage firstPage = new LandingPage(driver);
				firstPage.LoginApplication("mm@mm.com", "1234567@As");
				firstPage.Goto();
				ProductCatalougePage secondPage = new ProductCatalougePage(driver);
				List<WebElement> items = secondPage.GetproductCatalouges();
				secondPage.getProductByName(productName);
				secondPage.addToCart(productName);
				// clicking cart icon
				secondPage.clickcart();
				// on cart page
				CartPage cart = new CartPage(driver);
				Boolean match = cart.getProductMatched(productName);
				System.out.println(match);
				cart.checkOut();
				//checkout section and placing an order
				CheckoutPage checkout = new CheckoutPage(driver);
				checkout.selectCountry("india");
				checkout.submitOrder();
				driver.close();

	}

}
